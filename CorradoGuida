        <h2 id="torta-di-mele">Torta di mele</h2>
        
        <ul>
            <li>Time: 1.30h</li>
        </ul>
        
        <table>
            <thead>
                <tr>
                    <th>Ingredients</th>
                    <th>Quantity</th>
                </tr>
                <tr>
                    <td>Mele</td>
                    <td>700g</td>
                </tr>
                <tr>
                     <td>Farina 00</td>
                      <td>250g</td>
                </tr>
                <tr>
                     <td>Latte intero</td> 
                     <td>150g</td>
                </tr>
                <tr>
                     <td>Limoni</td>
                      <td>1</td>
                </tr>
                <tr>
                     <td>Cannella </td>
                      <td>1/2 cucchiaino</td>
                </tr>
                <tr>
                     <td>Zucchero </td>
                      <td>200g</td>
                </tr>
                <tr>
                     <td>Burro </td>
                      <td>200g</td>
